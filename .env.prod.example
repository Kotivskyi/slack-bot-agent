# slack_analytics_app - Production Environment
#
# IMPORTANT: Copy this file to .env.prod before deploying
#   cp .env.prod.example .env.prod
#
# WARNING: Never commit .env.prod to version control!

# === Project ===
PROJECT_NAME=slack_analytics_app
DEBUG=false
ENVIRONMENT=production

# === Logfire ===
# Get your token at https://logfire.pydantic.dev
LOGFIRE_TOKEN=
LOGFIRE_SERVICE_NAME=slack_analytics_app
LOGFIRE_ENVIRONMENT=production

# === PostgreSQL ===
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=  # Generate: openssl rand -base64 32
POSTGRES_DB=slack_analytics_app

# === AI Agent ===
OPENAI_API_KEY=
AI_MODEL=gpt-4.1

# === Slack ===
# Get from api.slack.com/apps -> Your App
# Bot token: OAuth & Permissions -> Bot User OAuth Token
SLACK_BOT_TOKEN=xoxb-your-bot-token
# Signing secret: Basic Information -> App Credentials -> Signing Secret
SLACK_SIGNING_SECRET=your-signing-secret
